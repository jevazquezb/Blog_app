<h2 class="form-title">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-post" }) do |f| %>
  <div class="input-sec">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "user-input" %>
  </div>

  <div class="input-sec">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "user-input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="input-sec center-cont">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "password" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: "btn" %>
  </div>
<% end %>

<div class="form-post links-cont">
  <%= render "devise/shared/links" %>
</div>
