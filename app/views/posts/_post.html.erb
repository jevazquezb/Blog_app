<h4 class="bio-title"><%= post.title %></h4>
<p><%= post.text %></p>
<p class="num-post com-foot">
  <span>Comments: <%= post.comments_counter %>, </span>
  <span>Likes: <%= post.likes_counter %></span>
</p>
<div class="btn-cont">
  <%= button_to "Like", user_post_likes_path(@user, post), method: :post, class: "btn" %>
  <% if can? :destroy, post %>
    <%= button_to "Delete", user_post_path(@user, post), method: :delete, class: "btn" %>
  <% end %>  
</div>
