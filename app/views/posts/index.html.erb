<header>
  <%= render @user %>
</header>
<main>
  <ul>
    <% @user.posts.each do |post| %>
      <li>
        <%= link_to user_post_path(@user.id, post.id), class: "post-link" do %>
          <div><%= render post %></div> <%# "render "posts/post", post: post" is a longer way %>
        <% end %>

        <ul>
          <% post.recent_comments.each do |comment| %>
            <li><%= comment.author.name %>: <%= comment.text %></li> <%# "render "comments/comment", comment: comment" is a longer way %>
          <% end %>
        </ul>
      </li>
    <% end %>     
  </ul>
  <button type="button">Pagination</button>
</main>